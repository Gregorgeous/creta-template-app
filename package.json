{
  "name": "hypermedia.app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "yarn-deduplicate",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore",
    "bootstrap": "run-s bootstrap:*",
    "bootstrap:dev": "dotenv -c local -- wsrun -msc bootstrap resources resources.dev",
    "bootstrap:vocabs": "dotenv -c local -- wsrun -msc bootstrap:vocabs",
    "start": "dotenv -c local -- knossos-ts serve $SPARQL_ENDPOINT --name $APP_NAME --user $SPARQL_USER --password $SPARQL_PASSWORD --routePath \"$API_ROOTS\"",
    "precommit": "yarn lint && wsrun -m -c precommit",
    "build": "yarn wsrun -m -c build",
    "serve": "dotenv -e .env.lando -- node server.js"
  },
  "license": "MIT",
  "dependencies": {
    "@hydrofoil/knossos": "^0.5.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-conditional-middleware": "^2.1.1",
    "express-history-api-fallback": "^2.2.1",
    "path-to-regexp": "^6.2.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^7.0.0",
    "@tpluscode/eslint-config": "^0.3.0",
    "@types/sparql-http-client": "^2.2.7",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit-a11y": "^2.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "npm-run-all": "^4.1.5",
    "standard": "^16.0.4",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.4",
    "wsrun": "^5.2.4",
    "yarn-deduplicate": "^3.1.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "rdf-loaders-registry": "0.3.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
